<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dinoassist">

    <ImageView
        android:id="@+id/dinobg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dinobg"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/dinosaur"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/dinosaur"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: "
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:textSize="20sp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ques1layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/question1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 7 x 10 = "
            android:textStyle="bold"
            android:textSize="26sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/answer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ques2layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/questions2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 8 x 5 = "
            android:textStyle="bold"
            android:textSize="26sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/answer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:visibility="gone"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ques3layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/questions3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 9 x 3 = "
            android:textStyle="bold"
            android:textSize="26sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/answer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:visibility="gone"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:gravity="center"/>

    </LinearLayout>



    <ImageView
        android:id="@+id/fireball"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/fireball"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@+id/micbtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/mic"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>




</RelativeLayout>