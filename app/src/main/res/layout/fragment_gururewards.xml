<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".gururewards">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:src="@drawable/back"
                android:padding="10dp"
                android:id="@+id/backbtn"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="LearnSphere's Rewards"
                android:textSize="23sp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:textColor="@color/black"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/bag"
                android:layout_marginTop="60dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/gurucoinsback"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="50dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/coin"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/header"
                            android:text="100"
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppins_bold"
                            android:textStyle="bold"
                            android:textSize="25sp"/>

                    </LinearLayout>







                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:id="@+id/headerbutton"
                        android:text="Redeem your Sphere Coins"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/poppins"
                        android:textStyle="bold"
                        android:textSize="15sp"/>





                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    />





            </LinearLayout>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:src="@drawable/surprise"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/rewards"
                        android:layout_margin="10dp"
                        android:text="Rewards"
                        android:background="@drawable/blueoutlinebg"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/poppins_bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/trans"
                        android:text="Transactions"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_margin="10dp"
                        android:background="@drawable/blueoutlinebg"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/poppins_bold"/>


                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:id="@+id/rewardlist"
                    android:visibility="visible"
                    android:layout_height="300dp">

                    <LinearLayout
                        android:layout_width="220dp"
                        android:orientation="horizontal"
                        android:id="@+id/_recycle"
                        android:layout_height="290dp"
                        android:layout_weight="1"
                        >


                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            app:cardCornerRadius="10dp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/customcard"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_margin="10dp"
                            android:layout_height="270dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/blueoutlinebg"
                                android:orientation="vertical"
                                >

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:id="@+id/dinosaur"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/pencilbox"
                                    android:layout_weight="1"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.6"
                                    android:fontFamily="@font/poppins"
                                    android:textStyle="bold"
                                    android:layout_margin="20dp"
                                    android:background="@drawable/navigation_bar_background"
                                    android:textSize="15sp"
                                    android:gravity="center"
                                    android:textColor="#000000"
                                    android:text="Pencil Box"/>



                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="30dp"
                                    android:layout_marginLeft="30dp"
                                    android:orientation="horizontal"
                                    android:layout_weight="2"
                                    >

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/coin"
                                        android:layout_weight="2"
                                        />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/poppins"
                                        android:textStyle="bold"
                                        android:textSize="18sp"
                                        android:gravity="center"
                                        android:textColor="#000000"
                                        android:text="1000"/>









                                </LinearLayout>






                            </LinearLayout>








                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            app:cardCornerRadius="10dp"
                            android:layout_marginLeft="10dp"

                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_margin="10dp"
                            android:layout_height="270dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/blueoutlinebg"
                                android:orientation="vertical"
                                >

                                <ImageView
                                    android:layout_width="match_parent"
android:src="@drawable/schoolbags"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    />



                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/quizsubjectname"
                                    android:layout_weight="1.6"
                                    android:fontFamily="@font/poppins"
                                    android:textStyle="bold"
                                    android:layout_margin="20dp"
                                    android:background="@drawable/navigation_bar_background"
                                    android:textSize="15sp"
                                    android:gravity="center"
                                    android:textColor="#000000"
                                    android:text="School Bag"/>



                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="30dp"
                                    android:layout_marginLeft="30dp"
                                    android:orientation="horizontal"
                                    android:layout_weight="2"
                                    >

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/coin"
                                        android:layout_weight="2"
                                        />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/poppins"
                                        android:textStyle="bold"
                                        android:textSize="18sp"
                                        android:gravity="center"
                                        android:textColor="#000000"
                                        android:text="3000"/>









                                </LinearLayout>









                            </LinearLayout>








                        </androidx.cardview.widget.CardView>











                    </LinearLayout>


                </HorizontalScrollView>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/translist"
                    android:layout_height="100dp"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:background="@drawable/blueoutlinebg">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:padding="10dp"
                        android:src="@drawable/coin"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Welcome Reward"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="+100"
                        android:textSize="25sp"
                        android:textColor="#399300"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="center"/>


                </LinearLayout>




            </LinearLayout>






        </androidx.cardview.widget.CardView>




    </LinearLayout>

</FrameLayout>