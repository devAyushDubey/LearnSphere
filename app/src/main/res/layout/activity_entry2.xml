<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#edf0f5"
    android:layout_height="match_parent"
    tools:context=".activityclass.Entry2">



    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="150sp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/learnspherelogo" />



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/logo"
        android:id="@+id/quiz"
        android:src="@drawable/gamified"
        />


    <TextView
        android:layout_below="@+id/quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gamified"
        android:fontFamily="@font/poppins_bold"
        android:textSize="25sp"
        android:id="@+id/head1"
        android:layout_marginLeft="20dp"
        android:textColor="#0B5460"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/head2"
        android:layout_below="@id/quiz"
        android:layout_toRightOf="@+id/head1"
        android:fontFamily="@font/poppins_bold"
        android:textSize="25sp"
        android:layout_marginLeft="10dp"
        android:textColor="#00B8D4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interactive:"
        android:layout_toRightOf="@+id/head2"
        android:layout_below="@id/quiz"
        android:fontFamily="@font/poppins_bold"
        android:textSize="25sp"
        android:layout_marginLeft="10dp"
        android:textColor="#0B5460"/>


    <TextView
        android:layout_marginLeft="20sp"
        android:textColor="#0B5460"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:layout_below="@id/head1"
        android:textSize="18sp"
        android:text="LearnSphere features gamified and ineractive quizes so that you never get bored. "
        />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_above="@+id/nextbtn"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/entry1bar"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/barbackground"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/entry2bar"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/barbackground"/>







    </LinearLayout>



    <ImageView
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/nextbtn"
        android:src="@drawable/next"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:padding="15dp"
        android:id="@+id/backbtn"
        android:src="@drawable/back"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"/>



</RelativeLayout>